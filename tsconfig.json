{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "module": "ESNext",
    "outDir": "./build",
    "moduleResolution": "node"
  },
  "include": ["./src"],
  "exclude": ["node_modules"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "build"]
  }
}
